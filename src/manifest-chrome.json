{
  "manifest_version": 3,
  "name": "WakaTime for ShaderToy",
  "version": "1.0.0",
  "description": "Track time spent editing ShaderToy shaders with WakaTime",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://www.shadertoy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.shadertoy.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WakaTime for ShaderToy"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.shadertoy.com/*"]
    }
  ]
}
